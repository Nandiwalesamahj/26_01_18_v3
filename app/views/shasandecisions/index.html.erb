<%= tinymce %>
	<h2 align="center"><strong>शासन निर्णय</strong></h2>
	<% if user_signed_in? &&  current_user.user_type == "Super_admin" %>
		<% if @summary_exist != nil %>
			<%= form_for @summary_exist do |f| %>
			<%= f.text_area :shasannirnay_summary, label: "शासन निर्णय सारांश",class: "tinymce" %>
			<%= f.submit "Update" %>
			<% end %>
		<% else %>
			<%= form_for @summary do |f| %>
			<%= f.text_area :shasannirnay_summary, label: "शासन निर्णय सारांश",class: "tinymce" %>
			<%= f.submit "Save" %>
			<% end %>
		<% end %>
	<% else %>
		<% if @summary_exist != nil %>
			<h4 class="margin-bottom2"><%= @summary_exist.shasannirnay_summary.html_safe %></h4>
		<% end %>
	<% end %>
	
	<% if user_signed_in? && (current_user.user_type == "Super_admin") %>
		<%= link_to "नवीन शासन निर्णय ",new_shasandecision_path, class: "btn btn-primary btn-sm btn-responsive" %>
	<% end %>
	<hr>

	<div class="row">
		<div class="col-xs-8">
			<% if @shasandecisions != nil && @shasandecisions.size > 0 %>
				<div class="table-responsive">
				<table class="table2">
					<col width="50">
					<col width="700">
					<thead>
					<tr>
						<th>नंबर</th>
						<th> माहिती</th>
					</tr>
					</thead>
					<% count = 1 %>
					<% for shasandecision in @shasandecisions %>
					<tbody>
						<tr>
							<td align="center"><strong><%= count %></strong></td>
							<td>
								<p><b><%= shasandecision.title.html_safe %></b></p>
								<hr>
								<p><%= shasandecision.description.html_safe %></p>
								<hr>
								<p><% if shasandecision.attachment? %>
										<%= link_to "#{truncate(File.basename(shasandecision.attachment.path),length: 25)}", :action => 'download_file_shasandecision', :controller=>"shasandecisions", :id => shasandecision.id,:target => "_blank" %>
										<hr>
									<% end %>
								</p>
								<p>
								<% if user_signed_in? && (current_user.user_type == "Super_admin") %>
									<%= link_to "Edit ",edit_shasandecision_path(shasandecision), class: "btn btn-primary btn-sm btn-responsive" %>
									<%= link_to "Delete",shasandecision_path(shasandecision),method: :delete, class: "btn btn-danger btn-sm btn-responsive" %>
								<% end %>
								</p>
							</td>		
						</tr>
					</tbody>
					<% count = count + 1 %>		
					<% end %>
				</table>
				</div>
			<% else %>
				<p><h3> माहिती उपलब्ध नाही </h3></p>
			<% end %>
		</div>
		<div class="col-xs-4">
			<div class="panel panel-default">
				<div class="panel-heading">
					<h3>जाहिरात</h3>
				</div>
					<div class="panel-body scrollable">
			<% if @ads.size > 0 %>
				<% for ad in @ads %>
					<div class="advertisement-box">
						<p class="underline-text"><strong><%= ad.title %></strong></p>
						<% if ad.photo? %>
							<p> <%= image_tag((ad.photo.url), class: "karmchari-img image-responsive") %></p>
						<% end %>
						<p><%= ad.description %></p>
					</div>
			    <% end %>
			<% end %>
		</div>
			</div>	
		</div>
		</div>

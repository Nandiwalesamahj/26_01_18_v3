<div class="row">
<div class="col-xs-12">
		<div id="myCarousel" class="carousel slide" data-ride="carousel">
                <!-- Indicators -->
                  <ol class="carousel-indicators">
                    <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
                    <li data-target="#myCarousel" data-slide-to="1"></li>
                    <li data-target="#myCarousel" data-slide-to="2"></li>
                  </ol>

                  <!-- Wrapper for slides -->
                  <div class="carousel-inner">
                    <div class="item active">
                      <%= image_tag(('nandi1.jpg')) %>

                    </div>

                    <div class="item">
                      <%= image_tag(('nandi2.jpg')) %>
                    </div>
                  
                    <div class="item">
                      <%= image_tag(('nandi3.jpg')) %>

                    </div>
                  </div>

                  <!-- Left and right controls -->
                  <a class="left carousel-control" href="#myCarousel" data-slide="prev">
                    <span class="glyphicon glyphicon-chevron-left"></span>
                    <span class="sr-only">Previous</span>
                  </a>
                  <a class="right carousel-control" href="#myCarousel" data-slide="next">
                    <span class="glyphicon glyphicon-chevron-right"></span>
                    <span class="sr-only">Next</span>
                  </a>
</div>
<br/>
</div>
</div>
 <div class="row">  
	<div class="col-xs-9" id="manogat">
			<% if @manogat != nil  %>
			<div>
			<p align="center">
			<% if @manogat.photo? %>
			<%= image_tag(@manogat.photo.url,class: "manogat-img image-responsive")%>
			<% end %>
			</p>
			<h2 align="center">
			<%= @manogat.user_name.html_safe %>
			</h2>
			<p>
			<%= @manogat.description.html_safe %>
			</p>
			<p>
			<% if @manogat.attachment? %>
			<%= link_to "#{truncate(File.basename(@manogat.attachment.path),length: 25)}","#",target: :_blank %>
			<% end %>
			</p>
			<p>
			<%if user_signed_in? %>
				<% if current_user.user_type == "Super_admin" %>
					<%= link_to "एडिट मनोगत" , edit_manogat_path(@manogat), class: "btn btn-info btn-sm btn-responsive" %>
					<%= link_to "Delete मनोगत" , manogat_path(@manogat),method: :delete,data: {confirm: "तुम्हाला खात्री आहे की तुम्ही मनोगत हटवू इच्छिता?"}, class: "btn btn-danger btn-sm btn-responsive" %>
				<% end %>
			<% end %>
			</p>
			</div>
		<% else %>
			<% if user_signed_in? %>
				<% if current_user.user_type == "Super_admin" %>
					<%= link_to "नवीन मनोगत " , new_manogat_path,class: "btn btn-default btn-sm btn-responsive" %>
				<% end %>
			<% else %>
			<h3 align="center">मनोगत डेटाबेसमध्ये आढळला नाही, प्रशासनाशी संपर्क साधा.</h3>
			<% end %>
		<% end %>

	</div>

	<div class="col-xs-3">
    <div class="box-shadow1">

     <h3 align="center"> Vistors: <img src="http://hitwebcounter.com/counter/counter.php?page=6871317&style=0001&nbdigits=7&type=page&initCount=1" title="Home Remedies For Wrinkles" Alt="Home Remedies For Wrinkles"   border="0" >
     </h3>
    </div>
  
  <hr>
		<div class="panel panel-default post-options">

			<div class="panel-heading">
			<p><h4><b>संदेश </b><% if user_signed_in? && (current_user.user_type == "Super_admin" || current_user.user_type == "Sub_admin") %>
			 |
			<%= link_to "नवीन संदेश",new_message_path, class: "btn btn-warning btn-responsive" %>
			<% end %>
			</h4>
			</p>	
			</div>
			<div class="panel-body scrollable">
				<% if @messages != nil && @messages.size > 0 %>
					<% for message in @messages %>
					<p><strong>=>  </strong><b><%= link_to "#{message.title}" ,message_path(message)%></b></p>
					<% end %>
				<% else %>
				<h5><b>कोणतेही संदेश नाहीत</b></h5>
				<% end %>

			</div>
		</div>
	</div>
</div>

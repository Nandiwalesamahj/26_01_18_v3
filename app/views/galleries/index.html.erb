<h2 align="center">फोटो गॅलरी</h2>
<hr>
	
		<% if user_signed_in? && current_user.user_type == "Super_admin" %>
			<%= simple_form_for @model do |f| %>
			<%= f.file_field :photo, label: "Photo Add Kara",multiple: true,name: "gallery[photo]" , class: "btn btn-primary btn-sm btn-responsive" %>
			<% end %>
		<% end %>
	<br/>
	<% if @models != nil && @models.size > 0 %>
		<% for model in @models %>
			<div class="col-xs-4">
				<% if user_signed_in? && current_user.user_type == "Super_admin" %>
						<%= link_to "Delete", gallery_path(model),method: :delete,data: {confirm: "Are you sure you want to delete this photo"}, class: "btn btn-danger btn-xs" %>
					<% end %>
				<% if model.photo? %>
					<p>  
					<a href = <%= model.photo.url %> target="_blank" ><%= image_tag((model.photo.url) , class: "img3 image-responsive margin-bottom2") %> </a>
					</p>
				<% end %>
			</div>
		<% end %>
	<%end%>
